                proxy_redirect     off;
                proxy_set_header   Upgrade    $http_upgrade;
                proxy_set_header   Connection "upgrade";
                #proxy_http_version 1.1;
                proxy_buffering    off;
                proxy_cache_bypass $http_pragma $http_authorization;
                proxy_no_cache     $http_pragma $http_authorization;
        }

	location ^~ /kong/ {
