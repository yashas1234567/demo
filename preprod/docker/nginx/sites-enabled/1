# Wildcard subdomain
server {
	listen 80;
	listen 443 ssl;
	server_name ~^(.*)\.onedirectdev42\.in$ ~^(.*)\.ngrok.io$  ~^(.*)\.onedirectdev\.in$ ~^(.*)\.ngrok.io$;

